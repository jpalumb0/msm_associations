<div class="page-header">
  <h3>Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @actor.name %></dd>

      <dt>Dob</dt>
      <dd><%= @actor.dob %></dd>

      <dt>Bio</dt>
      <dd><%= @actor.bio %></dd>

      <dt>Image url</dt>
      <dd><%= @actor.image_url %></dd>
      
      <dt>Number of characters</dt>
      <dd><%= Character.where(:actor_id => @actor.id).count %></dd>
      
      <dt>Filmography</dt>
      <dd>
      <ul class="list-group">
        <% @characters = Character.where(:actor_id => @actor.id) %>
        <% @characters.each do |character| %>
          <li class="list-group-item"><%= Movie.find(character.movie_id).title %> (<%= character.name %>)</li>
        <% end %>
        <li class="list-group-item">
          <div class="row">
        <div class="col-md-12">
          <form action="/create_character" method="post">
            <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
            
            <!-- Label and input for actor_id -->
            <div class="form-group">
              <label for="movie_id" class="control-label">
                Movie
              </label>
      
              <%= select_tag("movie_id", options_from_collection_for_select(Movie.all, :id, :title), :class => "form-control") %>
              <a href="/actors/new">or add a new movie</a>
            </div>
      
            <!-- Label and input for name -->
            <div class="form-group">
              <label for="name" class="control-label">
                Name
              </label>
      
              <input type="text" id="name" name="name" placeholder="Name" class="form-control">
            </div>
            
            <div class="form-group">
              <label for="actor_id" class="control-label">
              
              </label>
      
              <input type="hidden" id="actor_id" name="actor_id" placeholder="Actor ID" class="form-control" value="<%= @actor.id %>">

            </div>
      
            <button class="btn btn-success">
              Create Character
            </button>
            or
            <a href="/actors">Cancel</a>
          </form>
        </div>
      </div>
        </li>
      </ul>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/actors" class="btn btn-primary">
        Back
      </a>
      <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
